@model MyNotes.UI.Web.ViewModels.Admin.GroupViewModel

@using MvcBase.WebHelper.Mvc.Extensions;

<div id="addGroup" >
    @using (Ajax.BeginJqueryForm("frmAddGroup", MVC.Admin.Actions.SaveGroup(), "addGroup"))
    { 
        <div class="modal-header">
            <a class="close" data-dismiss="modal">×</a>
            <h3>Add New Group</h3>
        </div>
        <div class="modal-body">
            <div class="row center">
                @Html.TextBoxFor(m => m.Name, new { placeholder = "Group Name", @class = "input-xlarge" })
            </div>
        </div>
        <div class="modal-footer">
            <input type="submit" id="btnAddGroup" class="btn btn-success" value="Add" />
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
        </div>
    }
</div>